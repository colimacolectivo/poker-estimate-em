- if(user) 
    p Welcome #{user.email}
    a(href="/logout") Log out
- else
  form(action="/login", method="post", id="login-form")
    div
      label Username:
      input(type="text", name="username")
      br
      label Password:
      input(type="password", name="password")
      br
      input(type="submit", value="Log In")
